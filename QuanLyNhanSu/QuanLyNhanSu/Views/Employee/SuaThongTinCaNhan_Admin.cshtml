@model QuanLyNhanSu.Models.NHANVIEN
@{
    ViewBag.Title = "SuaThongTinCaNhan_Admin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body class="container-fluid">
    <br />
    <div class="row">
        <div class="col-lg-1"></div>
        <div class="col-lg-10">
            @using (Html.BeginForm("SuaThongTinCaNhan_Admin", "Employee", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <h4>Thay đổi thông tin cá nhân</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.MaNhanVien)
                    @Html.HiddenFor(model => model.DiaChi)
                    @Html.HiddenFor(model => model.QuanHuyen)
                    @Html.HiddenFor(model => model.ThanhPho)
                    @Html.HiddenFor(model => model.SDTRieng)
                    @Html.HiddenFor(model => model.SDTCongViec)
                    @Html.HiddenFor(model => model.MailCaNhan)
                    @Html.HiddenFor(model => model.MailCongViec)
                    @Html.HiddenFor(model => model.MaChucVu)
                    @Html.HiddenFor(model => model.MaPhongBan)

                    <table class="table">
                        <tr>
                            <td>
                                <div class="form-group">
                                    <b>@Html.Label("First name", htmlAttributes: new { @class = "control-label col-md-5" })</b>
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="form-group">
                                    <b>@Html.Label("Last name", htmlAttributes: new { @class = "control-label col-md-5" })</b>
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div class="form-group">
                                    <b>@Html.Label("Hình ảnh", htmlAttributes: new { @class = "control-label col-md-2" })</b>
                                    <div class="col-md-12">
                                        @Html.EditorFor(model => model.HinhAnh, new { htmlAttributes = new { @type = "file" } })
                                        @Html.ValidationMessageFor(model => model.HinhAnh, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="form-group">
                                    <b>@Html.Label("Mã số khác", htmlAttributes: new { @class = "control-label col-md-5" })</b>
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.MaSoKhac, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.MaSoKhac, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div class="form-group">
                                    <b>@Html.Label("Chứng minh thư", htmlAttributes: new { @class = "control-label col-md-5" })</b>
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.ChungMinhThu, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.ChungMinhThu, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="form-group">
                                    <b>@Html.Label("Ngày cấp", htmlAttributes: new { @class = "control-label col-md-5" })</b>
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.NgayCap, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.NgayCap, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div class="form-group">
                                    <b>@Html.Label("Giới tính", htmlAttributes: new { @class = "control-label col-md-5" })</b>
                                    <div class="col-md-10">
                                        Male: @Html.RadioButtonFor(model => model.GioiTinh, "Male", new { @Style = "margin-right: 40px" })
                                        Female: @Html.RadioButtonFor(model => model.GioiTinh, "Female")
                                        @Html.ValidationMessageFor(model => model.GioiTinh, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="form-group">
                                    <b>@Html.Label("Tình trạng hôn nhân", htmlAttributes: new { @class = "control-label col-md-5" })</b>
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.TinhTrangHonNhan, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.TinhTrangHonNhan, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div class="form-group">
                                    <b>@Html.Label("Quốc tịch", htmlAttributes: new { @class = "control-label col-md-5" })</b>
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.QuocTich, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.QuocTich, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="form-group">
                                    <b>@Html.Label("Ngày sinh", htmlAttributes: new { @class = "control-label col-md-5" })</b>
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.NgaySinh, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.NgaySinh, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div class="form-group">
                                    <b>@Html.Label("Tên gọi khác", htmlAttributes: new { @class = "control-label col-md-5" })</b>
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.TenGoiKhac, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.TenGoiKhac, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="form-group">
                                    <b>@Html.Label("Sở thích", htmlAttributes: new { @class = "control-label col-md-5" })</b>
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.SoThich, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.SoThich, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2">
                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <input type="submit" value="Save" class="btn btn-primary" />
                                    </div>
                                </div>
                            </td>
                        </tr>

                    </table>
                </div>
            }

            <div>
                @Html.ActionLink("Back", "ThongTinCaNhan_Admin")
            </div>
        </div>
        <div class="col-lg-1"></div>
    </div>
</body>

