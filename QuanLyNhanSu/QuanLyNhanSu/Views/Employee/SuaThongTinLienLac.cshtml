@model QuanLyNhanSu.Models.NHANVIEN

@{
    ViewBag.Title = "SuaThongTinLienLac";
    Layout = "~/Views/Shared/_Layout_NhanVien.cshtml";
}

<body class="container-fluid">
    <br />
    <div class="row">
        <div class="col-lg-1"></div>
        <div class="col-lg-10">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>Thay đổi thông tin liên lạc</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.MaNhanVien)
                @Html.HiddenFor(model => model.FirstName)
                @Html.HiddenFor(model => model.LastName)
                @Html.HiddenFor(model => model.HinhAnh)
                @Html.HiddenFor(model => model.MaSoKhac)
                @Html.HiddenFor(model => model.ChungMinhThu)
                @Html.HiddenFor(model => model.NgayCap)
                @Html.HiddenFor(model => model.GioiTinh)
                @Html.HiddenFor(model => model.TinhTrangHonNhan)
                @Html.HiddenFor(model => model.NgaySinh)
                @Html.HiddenFor(model => model.TenGoiKhac)
                @Html.HiddenFor(model => model.SoThich)
                @Html.HiddenFor(model => model.MaChucVu)
                @Html.HiddenFor(model => model.MaPhongBan)

                <table class="table">
                    <tr>
                        <td>
                            <div class="form-group">
                                <b>@Html.Label("Địa chỉ", htmlAttributes: new { @class = "control-label col-md-2" })</b>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </td>
                        <td>
                            <div class="form-group">
                                <b>@Html.Label("Quận/Huyện", htmlAttributes: new { @class = "control-label col-md-2" })</b>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.QuanHuyen, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.QuanHuyen, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <div class="form-group">
                                <b>@Html.Label("Thành phố/Tỉnh", htmlAttributes: new { @class = "control-label col-md-5" })</b>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.ThanhPho, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.ThanhPho, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </td>
                        <td>
                            <div class="form-group">
                                <b>@Html.Label("Quốc gia", htmlAttributes: new { @class = "control-label col-md-2" })</b>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.QuocTich, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.QuocTich, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <div class="form-group">
                                <b>@Html.Label("Điện thoại riêng", htmlAttributes: new { @class = "control-label col-md-5" })</b>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.SDTRieng, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.SDTRieng, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </td>
                        <td>
                            <div class="form-group">
                                <b>@Html.Label("Điện thoại công việc", htmlAttributes: new { @class = "control-label col-md-5" })</b>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.SDTCongViec, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.SDTCongViec, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <div class="form-group">
                                <b>@Html.Label("Email cá nhân", htmlAttributes: new { @class = "control-label col-md-5" })</b>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.MailCaNhan, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.MailCaNhan, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </td>
                        <td>
                            <div class="form-group">
                                <b>@Html.Label("Email công việc", htmlAttributes: new { @class = "control-label col-md-5" })</b>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.MailCongViec, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.MailCongViec, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2">
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Save" class="btn btn-primary" />
                                </div>
                            </div>
                        </td>
                    </tr>

                </table>
            </div>
            }

            <div>
                @Html.ActionLink("Back", "ChiTietLienLac")
            </div>
        </div>
        <div class="col-lg-1"></div>
    </div>
</body>
